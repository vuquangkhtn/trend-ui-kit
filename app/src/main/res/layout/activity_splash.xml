<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d80"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d20"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:text="@string/company_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_logo"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/d20"
            android:textColor="@android:color/white"
            android:text="@string/sologan"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="@dimen/d250"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginRight="@dimen/d15"
        android:layout_marginBottom="@dimen/d50"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_login"
            android:background="@drawable/button_custom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/d15"
            android:textColor="@android:color/white"
            android:text="Login" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d15"
            android:gravity="center"
            android:textColor="@color/hint_color"
            android:textSize="@dimen/font_size_16"
            android:text="or"/>
        <Button
            android:id="@+id/btn_create_account"
            android:background="@drawable/bg_btn_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:text="Create an account" />
    </LinearLayout>

</RelativeLayout>