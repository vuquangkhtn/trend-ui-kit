<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d200"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_marginTop="@dimen/d5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d30"
            android:layout_marginTop="@dimen/d5"
            android:layout_marginBottom="@dimen/d5"
            android:layout_marginRight="@dimen/d8"
            android:layout_marginLeft="@dimen/d8"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_marginRight="@dimen/d10"
                tools:src="@tools:sample/avatars"
                android:src="@drawable/img_profile"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_13"
                android:text="@string/sample_text"
                tools:text="@tools:sample/full_names"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/font_size_10"
                android:text="added 5 items"
                tools:text="added 5 items"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_products"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/d10"
            android:paddingLeft="@dimen/d10"
            android:paddingBottom="@dimen/d10"
            android:background="@color/colorMain"
            tools:listitem = "@layout/item_product_only"/>
    </LinearLayout>
</android.support.v7.widget.CardView>