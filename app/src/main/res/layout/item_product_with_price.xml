<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d230"
    android:layout_marginTop="@dimen/d10"
    android:layout_marginRight="@dimen/d10"
    android:layout_marginLeft="@dimen/d5"
    android:layout_marginBottom="@dimen/d5"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="@dimen/d5"
    app:cardCornerRadius="@dimen/d5">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imv_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d165"
        app:riv_corner_radius="@dimen/d5"
        android:gravity="center_horizontal"
        tools:src="@tools:sample/avatars"
        android:src="@drawable/img_profile"
        android:scaleType="centerCrop"
        android:background="@color/background_color"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_size_13"
        android:textAlignment="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/d35"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:text="@string/sample_text"
        tools:text="@tools:sample/lorem/random"/>
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d5"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_size_17"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:maxLines="1"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="$20"
        tools:text="$20"/>
</android.support.v7.widget.CardView>